{
    "type":"origins:multiple",
    "height_resource":{
       "type":"origins:resource",
       "min":0,
       "max":2,
       "hud_render":{
          "should_render":false
       },
       "start_value":0,
       "max_action":{
          "type":"origins:and",
          "actions":[
             {
                "type":"origins:grant_advancement",
                "advancement":"origins-classes:thaumaturge/fundamentals/discovering_auramancy",
                "selection":"only"
             },
             {
                "type":"origins:execute_command",
                "command":"title @s actionbar {\"bold\":false,\"color\":\"dark_purple\",\"italic\":false,\"obfuscated\":false,\"strikethrough\":false,\"translate\":\"text.thaumaturge.discovering_auramancy.height_goal_reached\",\"underlined\":false}"
             }
          ]
       }
    },
    "reach_the_highest_height":{
       "type":"origins:action_over_time",
       "rising_action":{
          "type":"origins:change_resource",
          "resource":"origins-classes:thaumaturge/fundamentals/discovering_auramancy_height_resource",
          "change":1,
          "operation":"add"
       },
       "interval":20,
       "condition":{
          "type":"origins:and",
          "conditions":[
             {
                "type":"origins:resource",
                "resource":"origins-classes:thaumaturge/fundamentals/discovering_auramancy_height_resource",
                "comparison":"!=",
                "compare_to":2
             },
             {
                "type":"origins:on_block",
                "block_condition":{
                   "type":"origins:height",
                   "comparison":"==",
                   "compare_to":255
                }
             }
          ]
       }
    },
    "reach_the_lowest_height":{
       "type":"origins:action_over_time",
       "rising_action":{
          "type":"origins:change_resource",
          "resource":"origins-classes:thaumaturge/fundamentals/discovering_auramancy_height_resource",
          "change":1,
          "operation":"add"
       },
       "interval":20,
       "condition":{
          "type":"origins:and",
          "conditions":[
             {
                "type":"origins:resource",
                "resource":"origins-classes:thaumaturge/fundamentals/discovering_auramancy_height_resource",
                "comparison":"!=",
                "compare_to":2
             },
             {
                "type":"origins:on_block",
                "block_condition":{
                   "type":"origins:height",
                   "comparison":"==",
                   "compare_to":-63
                }
             }
          ]
       }
    }
}